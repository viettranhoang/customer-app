<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/round_corners_gradient_green"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:src="@drawable/ic_check"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:text="@string/successfully"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/darkGreyBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:alpha="0.2"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/darkGreyBlue"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/text_content_dialog"
        android:gravity="center"
        android:text="@string/password_updated_successfully"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_login"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/login"
        style="@style/ButtonGradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>