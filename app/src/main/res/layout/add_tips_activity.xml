<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="Add a Tips for Naicy"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Weâ€™re appreciated it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_two_tips"
                android:layout_marginRight="20dp"
                android:background="@drawable/selector_oval_text_price"
                android:gravity="center"
                android:text="$2"
                android:layout_width="60dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/text_five_tips"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_oval_text_price"
                android:gravity="center"
                android:text="$5"
                android:layout_width="60dp"
                android:layout_height="45dp" />

            <TextView
                android:id="@+id/text_ten_tips"
                android:layout_marginLeft="20dp"
                android:background="@drawable/selector_oval_text_price"
                android:gravity="center"
                android:text="$10"
                android:layout_width="60dp"
                android:layout_height="45dp"/>

        </LinearLayout>

        <TextView
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:text="Custom Tips"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_custom_tip"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:hint="$"
            android:inputType="number"
            android:gravity="center"
            android:background="@drawable/selector_oval_text_price"
            android:layout_width="60dp"
            android:layout_height="45dp" />


    </LinearLayout>

    <Button
        style="@style/ButtonRedGradient"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>