<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="@string/how_was_the_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:text="@string/your_feedback_will_help_imporve_us_better"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_star1"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:background="@drawable/selector_star_rating_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_star2"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_star_rating_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_star3"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_star_rating_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_star4"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_star_rating_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/image_star5"
            android:layout_marginRight="5dp"
            android:background="@drawable/selector_star_rating_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="@string/tell_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="225 characters"
        android:textSize="14sp"
        android:padding="15dp"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:background="@drawable/round_borders_corner_grey"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:layout_marginTop="40dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/button_continue"
        style="@style/ButtonRedGradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>